<div class="container">
  <h1 class="text-center">Les pokemon</h1>
  <p class="text-center">
    <a href="/pokemon">Favorites</a>
  </p>

  <% pokemon.forEach(function(pokemon) { %>
    <div class="well">
      <h2><%= pokemon.name %></h2>
      <form method="POST" action="/test/addFavoris/<%= pokemon.name%>">
        <!-- <input hidden type="text" name="name" value="<%= pokemon.name %>">  -->
        <button class="btn btn-primary" type="submit">Add to Favorite Pokemon</button>
        <a href="/test/<%= pokemon.name%>">En savoir plus</a>
      </form>
    </div>
  <% }); %>
</div>
